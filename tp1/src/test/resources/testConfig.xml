<?xml version="1.0" encoding="UTF-8"?>
<config>

	<version>1.0</version>
	<level>DEBUG</level>
	<format>%d{HH:mm:ss}-%p-%t-%m</format>
	<outputs>
		<output>
			<filename>console</filename>
			<type>console</type>
			<filter>DEBUG</filter>
		</output>
		<output>
			<filename>file1</filename>
			<type>file</type>
			<filter>INFO</filter>
		</output>
		<output>
			<filename>file2</filename>
			<type>file</type>
			<filter>WARN</filter>
		</output>
	</outputs>
	<separator>-</separator>
</config>